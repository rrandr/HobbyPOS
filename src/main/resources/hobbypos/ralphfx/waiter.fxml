<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefHeight="458.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17" fx:controller="hobbypos.ralphfx.WaiterController">
    <children>
        <Pane prefHeight="13.0" prefWidth="600.0" style="-fx-background-color: #0097e6;"/>
        <Label layoutX="9.0" layoutY="37.0" text="Waiter Name"/>
        <TextField fx:id="tfTableName" layoutX="86.0" layoutY="31.0" prefHeight="32.0"/>
        <Button fx:id="btnSave" layoutX="454.0" layoutY="30.0" mnemonicParsing="false" onAction="#saveTable"
                prefHeight="32.0" prefWidth="102.0" style="-fx-background-color: #26c6da;" text="Add" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
        <Button fx:id="btnUpdate" disable="true" layoutX="374.0" layoutY="402.0" mnemonicParsing="false"
                onAction="#editEntry" prefHeight="32.0" prefWidth="102.0" style="-fx-background-color: #26c6da;"
                text="Update" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
        <Button fx:id="btnDelete" disable="true" layoutX="483.0" layoutY="402.0" mnemonicParsing="false"
                onAction="#deleteEntry" prefHeight="32.0" prefWidth="102.0" style="-fx-background-color: #26c6da;"
                text="Delete" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
        <TableView fx:id="tvTables" layoutX="14.0" layoutY="77.0" prefHeight="311.0" prefWidth="571.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="75.0" text="ID"/>
                <TableColumn fx:id="colName" prefWidth="189.0" text="Name"/>
                <TableColumn fx:id="colLocation" prefWidth="92.0" text="Location"/>
            </columns>
        </TableView>
        <Label layoutX="248.0" layoutY="39.0" text="Waiter Location"/>
        <CheckBox layoutX="343.0" layoutY="23.0" mnemonicParsing="false" text="KTV"/>
        <CheckBox layoutX="343.0" layoutY="46.0" mnemonicParsing="false" text="BAR"/>
        <Button fx:id="btnAssign" layoutX="14.0" layoutY="402.0" mnemonicParsing="false" prefHeight="32.0"
                prefWidth="102.0" style="-fx-background-color: #26c6da;" text="Assign" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
