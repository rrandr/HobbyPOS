            <TilePane fx:id="tableUsed" layoutX="14.0" layoutY="14.0" prefHeight="595.0" prefWidth="812.0" />
         </children>
        </AnchorPane>
    </center>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <right>
        <VBox prefHeight="610.0" prefWidth="288.0" spacing="10.0" style="-fx-background-color: #252225;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Pane prefHeight="60.0" prefWidth="200.0">
                    <children>
                        <Label layoutX="191.0" layoutY="6.0" text="0.0" textFill="WHITE">
                            <font>
                                <Font name="Lato Regular" size="40.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>
                <Label fx:id="lblUsername" prefHeight="40.0" prefWidth="216.0" text="***" textFill="WHITE" />
                <TableView fx:id="itemOrder" prefHeight="416.0" prefWidth="268.0">
                    <columns>
                        <TableColumn fx:id="itemQuan" prefWidth="75.0" text="Quantity" />
                        <TableColumn fx:id="itemDesc" prefWidth="111.0" text="Description" />
                        <TableColumn fx:id="itemPrice" minWidth="-Infinity" text="Price" />
                    </columns>
                </TableView>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#newOrder" prefHeight="54.0" prefWidth="119.0" style="-fx-background-color: #f0932b;" text="Add Order" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="11.0" right="15.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="54.0" prefWidth="113.0" style="-fx-background-color: #f0932b;" text="Modify Table" textAlignment="RIGHT" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            </children>
        </VBox>
    </right>
    <bottom>
        <HBox prefHeight="65.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #191619;" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#newOrder" prefHeight="54.0" prefWidth="149.0" style="-fx-background-color: #f0932b;" text="[F1 - New Order]" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button layoutX="20.0" layoutY="20.0" mnemonicParsing="false" prefHeight="54.0" prefWidth="149.0" style="-fx-background-color: #26c6da;" text="[F2 - Payment]" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button layoutX="189.0" layoutY="20.0" mnemonicParsing="false" prefHeight="54.0" prefWidth="149.0" style="-fx-background-color: #26c6da;" text="[F3 - Cancel Order]" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button layoutX="358.0" layoutY="20.0" mnemonicParsing="false" onAction="#actionManageProduct" prefHeight="54.0" prefWidth="149.0" style="-fx-background-color: #26c6da;" text="[F4 - Manage Product]" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button fx:id="btnManageTable" layoutX="527.0" layoutY="20.0" mnemonicParsing="false" onAction="#manageTable" prefHeight="54.0" prefWidth="149.0" style="-fx-background-color: #26c6da;" text="[F5 - Manage Table]" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button layoutX="696.0" layoutY="20.0" mnemonicParsing="false" prefHeight="54.0" prefWidth="149.0" style="-fx-background-color: #26c6da;" text="[F6 - Sales Report]" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button fx:id="btnLookup" mnemonicParsing="false" onAction="#manageLookup" prefHeight="54.0" prefWidth="149.0" style="-fx-background-color: #26c6da;" text="[F7 - Product Lookup]" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button layoutX="865.0" layoutY="20.0" mnemonicParsing="false" onAction="#logout" prefHeight="54.0" prefWidth="149.0" style="-fx-background-color: #e84118;" text="[F8 - Logout]" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
    <left>
        <VBox prefHeight="610.0" prefWidth="186.0" style="-fx-background-color: #252225;" BorderPane.alignment="CENTER">
         <children>
            <TilePane fx:id="availTable" prefHeight="609.0" prefWidth="186.0" />
         </children></VBox>
    </left>
</BorderPane>
